@model Payment

<h2>Delete Payment</h2>

<p>Are you sure you want to delete this payment?</p>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Payment ID</dt>
        <dd class="col-sm-10">@Model.PaymentId</dd>

        <dt class="col-sm-2">Bill ID</dt>
        <dd class="col-sm-10">@Model.BillId</dd>

        <dt class="col-sm-2">Payment Date</dt>
        <dd class="col-sm-10">@Model.PaymentDate</dd>

        <dt class="col-sm-2">Payment Amount</dt>
        <dd class="col-sm-10">@Model.PaymentAmount</dd>

        <dt class="col-sm-2">Payment Type</dt>
        <dd class="col-sm-10">@Model.PaymentType</dd>
    </dl>

    <form asp-action="Delete" asp-route-id="@Model.PaymentId">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
